<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MapsActivity">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".views.MapsActivity" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Pesquisar Local"
                    android:textColorHint="#000"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:background="@drawable/background_edittext"
                    android:importantForAutofill="no" />

                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_action_ir"/>


        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/perfil_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="11.5dp"
            android:layout_gravity="end"
            android:background="@color/transparent"
            android:src="@drawable/ic_action_perfil"
            android:focusableInTouchMode="true"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_my_location"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_action_my_location" />


</FrameLayout>